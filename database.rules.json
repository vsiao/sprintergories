{
  "rules": {
    "gameLogs": {
      ".read": true,
      "$gameId": {
        "$logEntry": {
          ".indexOn": "ts",
          ".write": "!data.exists()"
        }
      }
    },
    "gameStates": {
      ".read": true,
      "$roomId": {
        "$gameId": {
          ".write": "!data.exists()"
        }
      }
    },
    "rooms": {
      ".read": true,
      "$roomId": {
        ".write": "auth !== null && !data.exists()",
        "currentGameId": {
          ".write": "auth !== null"
        },
        "options": {
          ".write": "auth !== null"
        }
      }
    },
    "roomUsers": {
      ".read": true,
      "$roomId": {
        "$uid": {
          ".write": "auth.uid === $uid"
        }
      }
    }
  }
}
